<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

  <Button
      android:id="@+id/btn_scheme_url"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/with_scheme_url"
      android:textAllCaps="false"
      />

  <Button
      android:id="@+id/btn_page_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/with_page_name"
      android:textAllCaps="false"
      />

  <Button
      android:id="@+id/btn_page"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/with_page"
      android:textAllCaps="false"
      />
  <Button
      android:id="@+id/btn_scheme_filter"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/with_scheme_filter"
      android:textAllCaps="false"
      />

  <Button
      android:id="@+id/btn_html_scheme"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/with_scheme_url_html"
      android:textAllCaps="false"
      />

  <Button
      android:id="@+id/btn_not_found"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/with_not_found"
      android:textAllCaps="false"
      />

</LinearLayout>
